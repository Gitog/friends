<div class="card border-success bg-secondary text-white mx-auto" style="width: 60rem;">

  <div class="card-header">
  <h1 class="display-4"><strong>Name:</strong> <%= @friend.first_name + " " + @friend.last_name%></h1>
  </div>

  <div class="card-body">
  <p class="lead"><strong>Email:</strong> <%= @friend.email%></p>
 
  <p><strong>Phone:</strong> <%= @friend.phone%></p>
  <p><strong>Twitter Handle:</strong> <%= @friend.email%></p>
  <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-primary ' %> |
  <%= link_to "Back", friends_path, class:'btn  btn-dark'%> | 
  <%= link_to "Delete", @friend, method: :delete, class:'btn btn-danger'%>
</div>
</div>
</div>